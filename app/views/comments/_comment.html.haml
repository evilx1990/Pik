#comment.col-10.offset-1.col-md-8.offset-md-2
  -if comment.user.avatar.present?
    =image_tag(comment.user.avatar.thumb_small.url, alt: 'avatar')
  -else
    =image_tag('app_images/profile_default_m.jpg', alt: 'avatar')
  #data
    #uname
      =comment.user.username
    #date
      =comment.created_at.strftime('%e/%m/%Y %k:%M')
    %hr
  #body
    =comment.body