=bootstrap_devise_error_messages!
#before-login
  =link_to(image_tag('app_images/fb.png'), omniauth_authorize_path(resource_name, 'facebook'))

  =form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .form-group.mt-5
      = f.text_field :username, placeholder: t('devise.forms.fields.username'),
                                autocompleate: 'off',
                                class: 'form-control form-style'

      = f.email_field :email, placeholder: t('devise.forms.fields.email'), class: 'form-control form-style mt-1'
    .form-group
      - if @minimum_password_length
        %small{ style: 'color: black' }
          =t('devise.shared.minimum_password_length', count: @minimum_password_length)
      = f.password_field :password, placeholder: t('devise.forms.fields.password'), class: 'form-control form-style'
      = f.password_field :password_confirmation, placeholder: t('devise.forms.fields.confirm_password'),
                                                 class: 'form-control form-style mt-1'
    .form-group
      #recaptcha
        =flash[:recaptcha_error]
        =recaptcha_tags
        =f.submit t('.sign_up'), class: 'btn btn-warning'
  =render 'devise/shared/links'