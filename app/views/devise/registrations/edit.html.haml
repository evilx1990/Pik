.container-login
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = bootstrap_devise_error_messages!
    .form-group
      - if current_user.avatar.url.present?
        = image_tag(current_user.avatar.url)
        %br
        %br
        %br
        %br
        = f.label :remove_avatar, class: 'form-check-label' do
          = f.check_box :remove_avatar
      = f.file_field :avatar, id: 'dsf'
      = f.hidden_field :avatar_cache
    .form-group
      = f.email_field :email, placeholder: t('devise.forms.fields.email'), class: 'form-control'
      = f.text_field :username, placeholder: t('devise.forms.fields.username'), class: 'form-control'
    .form-group
      = f.password_field :password, placeholder: t('devise.forms.fields.new_password'), class: 'form-control'
      %small.form-text.text-muted= t('.leave_blank_if_you_don_t_want_to_change_it')
    .form-group
      = f.password_field :password_confirmation, placeholder: t('devise.forms.fields.confirm_password'), class: 'form-control'
    .form-group
      = f.password_field :current_password, placeholder: t('devise.forms.fields.current_password'), class: 'form-control'
      %small.form-text.text-muted= t('.we_need_your_current_password_to_confirm_your_changes')
    .form-group
      = f.submit t('.update'), class: 'btn btn-sm btn-primary'

    =link_to t('.remove_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete
  = link_to t('.back'), :back