= render 'home/header'
.container-login
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = bootstrap_devise_error_messages!
    .form-group
      = f.email_field :email, placeholder: 'Email', class: 'form-control'
      = f.text_field :username, placeholder: 'Username', class: 'form-control'
    .form-group
      = f.password_field :password, placeholder: 'New Password', class: 'form-control'
      %small.form-text.text-muted= t('.leave_blank_if_you_don_t_want_to_change_it')
    .form-group
      = f.password_field :password_confirmation, placeholder: 'Password confirmation', class: 'form-control'
    .form-group
      = f.password_field :current_password, placeholder: 'Current password', class: 'form-control'
      %small.form-text.text-muted= t('.we_need_your_current_password_to_confirm_your_changes')
    .form-group
      = f.submit t('.update'), class: 'btn btn-sm btn-primary'

    =link_to t('.remove_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete
  = link_to t('.back'), :back