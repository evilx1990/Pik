.row
  -@categories.each do |category|
    .category.col-10.offset-1.col-md-6.offset-md-0.col-lg-4
      -unless category.image
        =link_to(image_tag('app_images/cat_prev.png', alt: 'Image'), category_path(category))
      -else
        =link_to(image_tag(category.image.picture.thumb_medium.url, alt: 'Image'), category_path(category))
      #category-info.justify-content-between
        %h3
          =category.name
        -if current_user.following?(category)
          =link_to(image_tag('app_images/unfollow.resized.png', alt: 'unfollow'), unfollow_category_path(category), id: 'follow', remote: true, method: :put)
        -else
          =link_to(image_tag('app_images/follow.resized.png', alt: 'follow'), follow_category_path(category), id: 'follow', remote: true, method: :put)


=render 'categories/modal' # <= Modal window here(link in layout)

